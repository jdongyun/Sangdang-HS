<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="Theme.Sutaek_Material" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/public_color</item>
        <item name="colorPrimaryDark">@color/public_darker_color</item>
        <item name="colorAccent">#6bbc6e</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.Sutaek_Material.Translucent">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/public_darker_color</item>
        <item name="colorAccent">#6bbc6e</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Sutaek_Material.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/public_color</item>
        <item name="colorPrimaryDark">@color/public_darker_color</item>
        <item name="colorAccent">#6bbc6e</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>